  {
  	"name": "SnooKarma Extension",
  	"version": "1.0.4",
  	"description": "Tip others with SnooKarma!",
  	"permissions": ["declarativeContent", "storage", "activeTab"],
  	"background": {
  		"scripts": ["background.js"],
  		"persistent": false
  	},
  	"page_action": {
  		"default_popup": "popup.html",
  		"default_icon": {
  			"16": "img/icon16.png",
  			"32": "img/icon32.png",
  			"48": "img/icon48.png",
  			"128": "img/icon128.png"
  		}
	  },
	"content_scripts": [{
		"matches": ["https://*.reddit.com/*"],
		"js": ["jquery.min.js", "content-script.js"],
		"css": ["style.css"]
	}],
	"web_accessible_resources": ["script.js"],
  	"icons": {
  		"16": "img/icon16.png",
  		"32": "img/icon32.png",
  		"48": "img/icon48.png",
  		"128": "img/icon128.png"
  	},
  	"manifest_version": 2
  }